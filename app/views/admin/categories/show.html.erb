<h1><%= @category.name %></h1>

<% if @products.any? %>
  <h2>Products in this Category:</h2>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= link_to product.name, admin_product_path(product) %> - <%= number_to_currency(product.price) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No products found in this category.</p>
<% end %>